              Repository
            </h2>

            <a href={tool.repoUrl!} target="_blank" rel="noopener noreferrer" class="text-sm font-bold text-blue-600 hover:underline block mb-5">
              {repoPath}
            </a>

            {(tool.githubStars != null || tool.githubForks != null) && (
              <div class="grid grid-cols-2 gap-4 mb-5">
                {tool.githubStars != null && (
                  <div class="text-center">
                    <p class="text-2xl font-black text-neutral-900">{formatNumber(tool.githubStars)}</p>
                    <p class="text-[9px] font-black uppercase tracking-widest text-neutral-400">Stars</p>
                  </div>
                )}
                {tool.githubForks != null && (
                  <div class="text-center">
                    <p class="text-2xl font-black text-neutral-900">{formatNumber(tool.githubForks)}</p>
                    <p class="text-[9px] font-black uppercase tracking-widest text-neutral-400">Forks</p>
                  </div>
                )}
              </div>
            )}

            <div class="space-y-3 pt-4 border-t border-neutral-100">
              {tool.githubLanguage && (
                <div class="flex items-center justify-between">
                  <span class="text-[10px] font-bold text-neutral-400 uppercase tracking-tight">Language</span>
                  <span class="text-xs font-bold text-neutral-700">{tool.githubLanguage}</span>
                </div>
              )}
              {tool.githubLicense && (
                <div class="flex items-center justify-between">
                  <span class="text-[10px] font-bold text-neutral-400 uppercase tracking-tight">License</span>
                  <span class="text-xs font-bold text-neutral-700">{tool.githubLicense}</span>
                </div>
              )}
              {tool.githubUpdatedAt && (
                <div class="flex items-center justify-between">
                  <span class="text-[10px] font-bold text-neutral-400 uppercase tracking-tight">Last Updated</span>
                  <span class="text-xs font-bold text-neutral-700">{timeAgo(tool.githubUpdatedAt)}</span>
                </div>
              )}
