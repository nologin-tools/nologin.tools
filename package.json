{
  "name": "nologin.tools",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "wrangler pages dev ./dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply nologin-tools-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply nologin-tools-db --remote",
    "deploy": "astro build && wrangler deploy",
    "deploy:cron": "cd workers/cron && wrangler deploy"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@tailwindcss/vite": "^4.2.0",
    "astro": "^5.17.1",
    "drizzle-orm": "^0.45.1",
    "tailwindcss": "^4.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260218.0",
    "drizzle-kit": "^0.31.9",
    "wrangler": "^4.66.0"
  }
}
